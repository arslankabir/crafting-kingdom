# ThirdWeb Configuration
# Get your client ID from the ThirdWeb dashboard
NEXT_PUBLIC_TEMPLATE_CLIENT_ID=replace_with_your_thirdweb_client_id
# Generate a secure API secret key from ThirdWeb
THIRDWEB_API_SECRET_KEY=replace_with_your_thirdweb_api_secret_key

# Wallet Configuration
# Ethereum wallet address for admin operations (0x format)
ADMIN_WALLET_ADDRESS=0x0000000000000000000000000000000000000000
# IMPORTANT: Keep this EXTREMELY secure. Never share or commit this.
ADMIN_WALLET_PRIVATE_KEY=replace_with_your_wallet_private_key

# Application Configuration
# Your application's primary domain
DOMAIN=http://localhost:3000
# Contract factory address for game deployments
FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
# Use a strong, unique encryption password (min 32 characters)
ENCRYPTION_PASSWORD=use_a_very_long_and_complex_random_string_here

# Logging Configuration
# Logging level: error, warn, info, verbose, debug, silly
LOG_LEVEL=info

# ThirdWeb Engine Configuration
# URL for ThirdWeb Engine (default or your custom instance)
THIRDWEB_ENGINE_URL=https://engine.thirdweb.com
# Access token for ThirdWeb Engine
THIRDWEB_ENGINE_ACCESSTOKEN=replace_with_your_thirdweb_engine_access_token
# Wallet address for ThirdWeb Engine operations
THIRDWEB_ENGINE_WALLET=0x0000000000000000000000000000000000000000

# Database Configuration
# PostgreSQL connection URL (format: postgresql://username:password@host:port/database)
POSTGRES_CONNECTION_URL=postgresql://username:password@localhost:5432/crafting_kingdoms

# Security Configuration
# Set to 'development' or 'production'
NODE_ENV=development
# Generate a secure, random string for session management
NEXTAUTH_SECRET=generate_a_long_random_string_here